@model Kompetens.ViewModels.KundViewModel
<div class="modal fade in" id="addLoanableModal" style="display:block;" data-backdrop="static" data-keyboard="false">
    <div class="modal-body">
        @using (Html.BeginForm("SkapaNyKund", "Home", FormMethod.Post))
        {
            <div class="row">
                &nbsp;
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.KundNamn, new { @class = "control-label col-md-5" })
                <div class="col-md-7">
                    @Html.EditorFor(m => m.KundNamn, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.BestallareNamn, new { @class = "control-label col-md-5" })
                <div class="col-md-7">
                    @Html.EditorFor(m => m.BestallareNamn, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <input type="submit" value="Skapa" onclick="location.href='@Url.Action("SkapaNyKund", "Home")'" class="btn btn-default pull-right" />
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        }
    </div>
</div>


    <script type="text/javascript">
        $(function () {
            $('#approve-btn').click(function () {
                $('#modal-container').modal('hide');
            });
        });
    </script>
